<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mini_player"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="7">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="5"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/mini_card"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="10dp"
            />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      >

        <TextView
            android:id="@+id/mini_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed "
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"

            />

        <TextView
            android:id="@+id/mini_author"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#B6B5B5"
            android:text="Author"

            android:textSize="11sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            />
    </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mini_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:clickable="true">


        <ImageView
            android:id="@+id/mini_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/play_btn"
            android:background="@null"
            android:padding="5dp"
            android:layout_margin="10dp"
            tools:ignore="contentDescription"
            />

        <ImageView
            android:id="@+id/mini_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/large_pause"
            android:background="@null"
            android:padding="5dp"
            android:layout_margin="10dp"
            tools:ignore="contentDescription"
            />


    </FrameLayout>


</LinearLayout>